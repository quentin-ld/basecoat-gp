{
  "name": "basecoat-gp-theme",
  "version": "1",
  "type": "module",
  "scripts": {
    "lint-js": "eslint --config .config/eslint.js --fix --ext .js assets/js/**/*.js && prettier --config .config/prettier.config.js --write assets/js/**/*.js",
    "lint-scss": "prettier --config .config/prettier.config.js --write assets/scss/**/*.scss",
    "lint-php": "composer lint:php",
    "build-css": "node .config/esbuild-css.js",
    "build-js": "node .config/esbuild-js.js",
    "build-i18n": "node .config/i18n.js",
    "zip-theme": "node .config/zip.js",
    "watch-scss": "node .config/esbuild-watch.js",
    "watch": "node .config/esbuild-watch.js",
    "build": "node .config/build.js",
    "default": "npm run build"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.23",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "css-declaration-sorter": "^7.3.1",
    "esbuild": "^0.27.2",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.39.2",
    "postcss": "^8.4.49",
    "postcss-combine-media-query": "^2.1.0",
    "postcss-merge-rules": "^7.0.7",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.7.4",
    "sass": "^1.97.2"
  }
}
